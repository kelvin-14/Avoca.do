<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Avocado" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.Avocado.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Avocado.AppWidgetContainer" parent="Theme.Avocado.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

    <style name="Theme.Avocado.WidgetViewsActivity" parent="Theme.AppCompat">
        <item name="background">@color/purple_700</item>
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
        <item name="android:textColor">@color/purple_700</item>

    </style>

    <style name="ThemeOverlay.Avocado.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="WidgetActivityDialogsTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
