<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Avocado.AppWidget.Container"
    android:id="@+id/preview_all_tasks_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Avocado.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:minHeight="30.dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Tasks"
                android:textSize="16.sp"
                android:textColor="@color/textPrimary"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/widget_add_task_button"
                android:layout_height="25.dp"
                android:layout_width="25.dp"
                android:background="@drawable/plus_icon_material"
                android:backgroundTint="@color/textPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take out the trash" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:backgroundTint="#345789">
                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Buy Potatoes"
                    android:textColor="@color/textPrimary"
                    android:layout_marginLeft="32dp"
                    android:background="@drawable/line"
                    android:textAlignment="center"
                    android:paddingTop="5dp"/>
            </FrameLayout>

        </LinearLayout>


    </LinearLayout>





</RelativeLayout>